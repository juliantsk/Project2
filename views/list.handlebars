<div class="jumbotron text-center">
  <div class="jumbotron">
    <h1 id="momma">Momma's Little Helper!</h1>
    <p id="quote">
      <i>"Organized shopping! - Better decisions!"
      </i>
    </p>
    <div id="notepad" class="container-fluid">
      <div class="row">
        <div class="col-sm-12 ">
          <img src="../public/assets/Images/notepad.png" alt="notepad">
        </div>
      </div>
    </div>
    <div id="list-bg" class="container-fluid">
      <div class="row align-items-center">
        <div class="col-sm-4  col-sm-offset-4">
          <table class="table table-sm" id="list">
            <thead id="tHead">
              <tr>
                <th scope="col">Name:</th>
                <th scope="col">Qty:</th>
                <th scope="col">Unit:</th>
                <th scope="col">Description:</th>
                <th scope="col">Picked up?</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>
                  <input type="checkbox" aria-label="Checkbox for following text input">
                </td>
                <td>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </td>
              </tr>
            </tbody>
          </table>

        </div>
      </div>
      <br>
      <br>
      <div class="row">
        <div class="col-sm-12 ">

        </div>
      </div>
    </div>
  </div>

  <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addItem">
    Add itemt to list
  </button>
  <button type="button" class="btn btn-default" id="done-shopping">
    Done Shopping
  </button>
</div>


<div class="modal-body"id="addItem">

  <div class="form-group">
    <label for="item">Item</label>
    <input type="text" id="itemName" placeholder="Item">
  </div>
  <div class="form-group">
    <label for="qty">Quantity </label>
    <input type="text" id="qty" placeholder="Quantity">
  </div>
  <div class="form-group">
    <label for="unit">Unit</label>
    <input type="text" id="unit" placeholder="Unit">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" id="description" placeholder="Description">
  </div>


  <div class="modal-footer">
    <button type="button" class="btn btn-default" id="create-item"data-dismiss="modal">
      Submit
    </button>
    <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">
      Cancel
    </button>
  </div>
</div>
